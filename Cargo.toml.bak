[workspace]
resolver = "2"
members = ["memo-core", "memo-cli"]

[workspace.package]
version = "0.1.0"
edition = "2021"
authors = ["Zoranner"]

[workspace.dependencies]
# 共享的依赖版本
anyhow = "1"
thiserror = "1"
serde = { version = "1", features = ["derive"] }
serde_json = "1"
chrono = { version = "0.4", features = ["serde"] }
uuid = { version = "1", features = ["v4", "serde"] }
tokio = { version = "1", features = ["rt-multi-thread", "macros", "fs"] }
